<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rocks.huwi.liberatepdf2.javafx.DropWindowController">
		
	<ListView fx:id="filesListView" onDragDropped="#onDragDropped" onDragOver="#onDragOver" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" />
   <Label text="Please drag'n'drop PDF files into this field:" GridPane.rowIndex="1" />
   <TextField fx:id="passwordTextField" promptText="Password to decrypt dropped PDF files" />

	<columnConstraints>
		<ColumnConstraints />
	</columnConstraints>
	<rowConstraints>
		<RowConstraints />
      <RowConstraints />
      <RowConstraints />
	</rowConstraints>

</GridPane>
